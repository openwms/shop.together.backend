<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <mapping>
        <class-a>io.interface21.shop2gether.service.User</class-a>
        <class-b>io.interface21.shop2gether.UserVO</class-b>
        <field>
            <a is-accessible="true">username</a>
            <b is-accessible="true">username</b>
        </field>
        <field>
            <a is-accessible="true">phonenumber</a>
            <b is-accessible="true">phonenumber</b>
        </field>
        <field>
            <a is-accessible="true">home</a>
            <b is-accessible="true">home</b>
        </field>
    </mapping>

    <mapping>
        <class-a>io.interface21.shop2gether.service.UserGroup</class-a>
        <class-b>io.interface21.shop2gether.UserGroupVO</class-b>
        <field>
            <a is-accessible="true">pk</a>
            <b is-accessible="true">pk</b>
        </field>
    </mapping>

    <mapping>
        <class-a>io.interface21.shop2gether.service.Owner</class-a>
        <class-b>io.interface21.shop2gether.OwnerVO</class-b>
        <field>
            <a is-accessible="true">items</a>
            <b is-accessible="true">items</b>
            <a-hint>io.interface21.shop2gether.service.TextNote</a-hint>
            <b-hint>io.interface21.shop2gether.TextNoteVO</b-hint>
        </field>
    </mapping>

    <mapping>
        <class-a>io.interface21.shop2gether.service.TextNote</class-a>
        <class-b>io.interface21.shop2gether.TextNoteVO</class-b>
        <field>
            <a is-accessible="true">sharedWith</a>
            <b is-accessible="true">sharedWith</b>
        </field>
        <field>
            <a is-accessible="true">shareable</a>
            <b is-accessible="true">shareable</b>
        </field>
        <field>
            <a is-accessible="true">pk</a>
            <b is-accessible="true">persistentKey</b>
        </field>
        <field>
            <a is-accessible="true">pKey</a>
            <b is-accessible="true">pKey</b>
        </field>
        <field>
            <a is-accessible="true">title</a>
            <b is-accessible="true">title</b>
        </field>
        <field>
            <a is-accessible="true">text</a>
            <b is-accessible="true">text</b>
        </field>
        <field>
            <a is-accessible="true">color</a>
            <b is-accessible="true">color</b>
        </field>
        <field>
            <a is-accessible="true">pinned</a>
            <b is-accessible="true">pinned</b>
        </field>
        <field>
            <a is-accessible="true">ol</a>
            <b is-accessible="true">version</b>
        </field>
    </mapping>

</mappings>